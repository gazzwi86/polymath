{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "npx tsc",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "npx eslint .",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
